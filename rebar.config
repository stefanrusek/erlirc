{erl_opts, [
	    %% bin_opt_info,
	    warn_format,
	    warn_export_all,
	    warn_export_vars,
	    warn_obsolete_guard,
	    warn_unused_import,
            warn_bif_clash,
	    %% warn_missing_spec,
	    %% warn_untyped_record,
	    debug_info]}.

{require_otp_vsn, "R13B03|R13B04|R14"}.

{cover_enabled, true}.
{edoc_opts, [{todo, true}]}.

{xref_checks,
         [undefined_function_calls,
          locals_not_used,
           exports_not_used]}.

{eunit_opts,
         [{report,{eunit_surefire,[{dir,"."}]}}]}.

{deps, [
       {gproc, ".*", {git, "git://github.com/esl/gproc.git", "master"}} ]}.

